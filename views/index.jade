extends layout

block content
 h1= title
 p Welcome to #{title}
 if errors
  each error, i in errors
   div.alert.alert-danger #{error.msg}
 form(method='post', action='/uploads',enctype='multipart/form-data')
  .form-group
   label Reciept Upload
   input.form-control(name='uploadfile', type='file', placeholder='Upload reciept')
  input.btn.btn-primary(type='submit', name='submit', value = 'Upload')
 form(method='get', action='/imgs')
  input.btn.btn-primary(type='submit', name = 'submit', value = 'Show images')
 form(method='get', action='/pdfs')
  input.btn.btn-primary(type='submit', name = 'submit', value = 'Show pdfs')
 form(method = 'post', action = '/delete')
  input.btn.btn-primary(type='submit', name = 'submit', value ='Delete files')